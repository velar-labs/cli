{
  "name": "velyx",
  "version": "1.0.3",
  "description": "CLI to add composable UI components to Laravel projects",
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "velyx": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "laravel",
    "cli",
    "ui",
    "blade",
    "tailwind",
    "alpine"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/velyx-labs/cli.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development VELYX_REGISTRY_URL=http://velyx.test/api/v1 tsup",
    "build": "cross-env NODE_ENV=production VELYX_REGISTRY_URL=https://registry.velyx.dev/api/v1 tsup",
    "check:ci": "pnpm run lint && pnpm run typecheck",
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development VELYX_REGISTRY_URL=http://velyx.test/api/v1 tsup --watch",
    "check": "pnpm run format:write && eslint --fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "lint": "eslint",
    "prepublishOnly": "pnpm run build",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm build && pnpm publish --access public",
    "release": "changeset version",
    "start": "node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development VELYX_REGISTRY_URL=http://velyx.test/api/v1 node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.3",
    "kleur": "^4.1.5",
    "log-symbols": "^7.0.1",
    "ora": "^9.1.0",
    "prompts": "^2.4.2",
    "velyx": "link:../../../../.local/share/pnpm/global/5/node_modules/velyx",
    "vite-tsconfig-paths": "^6.0.5",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.9",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "3.8.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.18"
  }
}
